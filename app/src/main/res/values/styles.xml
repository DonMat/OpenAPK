<resources>

  <style name="Light"
      parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:windowNoTitle">true</item>
    <item name="windowActionBar">false</item>
    <!-- colorPrimary is used for the action bar background -->
    <item name="colorPrimary">@color/actionBar</item>
    <!-- colorPrimaryDark is used for the status bar -->
    <item name="colorPrimaryDark">@color/statusBar</item>
    <item name="colorAccent">@color/accentLight</item>
    <!-- text colors -->
    <item name="android:textColorPrimary">@color/textLight</item>
    <item name="android:textColor">@color/textLight</item>
  </style>

  <style name="Dark"
      parent="Theme.AppCompat.NoActionBar">
    <item name="android:windowNoTitle">true</item>
    <item name="windowActionBar">false</item>
    <!-- colorPrimary is used for the default action bar background -->
    <item name="colorPrimary">@color/actionBar</item>
    <!-- colorPrimaryDark is used for the status bar -->
    <item name="colorPrimaryDark">@color/statusBar</item>
    <item name="colorAccent">@color/accentDark</item>
    <!-- text colors -->
    <item name="android:textColorPrimary">@color/textDark</item>
    <item name="android:textColor">@color/textDark</item>
  </style>

  <style name="CardViewStyle"
      parent="CardView">
    <item name="cardCornerRadius">2dp</item>
    <item name="cardElevation">2dp</item>
  </style>

  <style name="LabelStyle">
    <item name="android:background">@drawable/fab_label_background</item>
    <item name="android:textColor">@color/cardLight</item>
  </style>

</resources>
