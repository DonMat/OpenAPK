<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <include
      android:id="@+id/toolbar"
      layout="@layout/toolbar"/>

  <RelativeLayout
      android:id="@+id/header_layout"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/toolbar"
      android:orientation="vertical">

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@color/primary"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/app_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:maxHeight="50dp"
        android:maxWidth="50dp"
        android:src="@drawable/ic_android"
        android:transitionName="@string/transition"/>

    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_icon"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="@string/error_layout"
        android:textColor="@color/white"
        android:textSize="22sp"/>
  </RelativeLayout>

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_below="@+id/header_layout"
      android:orientation="vertical"
      android:gravity="top">

    <RelativeLayout
        android:id="@+id/quick_action_layout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:gravity="center">

      <RelativeLayout
          android:id="@+id/open"
          android:layout_width="70dp"
          android:layout_height="match_parent"
          android:orientation="vertical">

        <ImageView
            android:id="@+id/open_icon"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:src="@drawable/ic_open_in_new"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_below="@+id/open_icon"
            android:text="@string/action_open"
            android:textSize="12sp"/>
      </RelativeLayout>

      <RelativeLayout
          android:id="@+id/extract"
          android:layout_width="70dp"
          android:layout_height="match_parent"
          android:layout_toRightOf="@+id/open"
          android:orientation="vertical">

        <ImageView
            android:id="@+id/extract_icon"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:src="@drawable/ic_android"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_below="@+id/extract_icon"
            android:text="@string/action_extract"
            android:textSize="12sp"/>
      </RelativeLayout>

      <RelativeLayout
          android:id="@+id/uninstall"
          android:layout_width="70dp"
          android:layout_height="match_parent"
          android:layout_toRightOf="@+id/extract"
          android:orientation="vertical">

        <ImageView
            android:id="@+id/uninstall_icon"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:src="@drawable/ic_delete"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_below="@+id/uninstall_icon"
            android:text="@string/action_uninstall"
            android:textSize="12sp"/>
      </RelativeLayout>

      <RelativeLayout
          android:id="@+id/hide"
          android:layout_width="70dp"
          android:layout_height="match_parent"
          android:layout_toRightOf="@+id/uninstall"
          android:orientation="vertical">

        <ImageView
            android:id="@+id/hide_icon"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:src="@drawable/ic_visibility"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_below="@+id/hide_icon"
            android:text="@string/action_hide"
            android:textSize="12sp"/>
      </RelativeLayout>

      <RelativeLayout
          android:id="@+id/disable"
          android:layout_width="70dp"
          android:layout_height="match_parent"
          android:layout_toRightOf="@+id/hide"
          android:orientation="vertical">

        <ImageView
            android:id="@+id/disable_icon"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:src="@drawable/ic_remove_circle"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_below="@+id/disable_icon"
            android:text="@string/action_disable"
            android:textSize="12sp"/>
      </RelativeLayout>

      <RelativeLayout
          android:id="@+id/share"
          android:layout_width="70dp"
          android:layout_height="match_parent"
          android:layout_toRightOf="@+id/disable"
          android:orientation="vertical">

        <ImageView
            android:id="@+id/share_icon"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:src="@drawable/ic_send"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_below="@+id/share_icon"
            android:text="@string/action_share"
            android:textSize="12sp"/>
      </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/information_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/quick_action_layout"
        android:gravity="top">

      <RelativeLayout
          android:id="@+id/app_apk"
          android:layout_width="match_parent"
          android:layout_height="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/horizontal_margin"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:text="@string/package_layout"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/app_apk_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/horizontal_margin"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="@string/error_layout"
            android:textSize="16sp"/>
      </RelativeLayout>

      <RelativeLayout
          android:id="@+id/app_version"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:layout_below="@+id/app_apk">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/horizontal_margin"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:text="@string/version_layout"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/app_version_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/horizontal_margin"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="@string/error_layout"
            android:textSize="16sp"/>
      </RelativeLayout>

      <RelativeLayout
          android:id="@+id/app_size"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:layout_below="@+id/app_version">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/horizontal_margin"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:text="@string/size_layout"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/app_size_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/horizontal_margin"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="@string/error_layout"
            android:textSize="16sp"/>
      </RelativeLayout>

      <RelativeLayout
          android:id="@+id/app_cache_size"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:layout_below="@+id/app_size">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/horizontal_margin"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:text="@string/cache_size_layout"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/app_cache_size_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/horizontal_margin"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="@string/error_layout"
            android:textSize="16sp"/>
      </RelativeLayout>

      <RelativeLayout
          android:id="@+id/app_data_folder"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:layout_below="@+id/app_cache_size">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/horizontal_margin"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:text="@string/data_layout"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/app_data_folder_text"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/horizontal_margin"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical|right"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="@string/error_layout"
            android:textSize="16sp"/>
      </RelativeLayout>

      <RelativeLayout
          android:id="@+id/app_install"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:layout_below="@+id/app_data_folder">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/horizontal_margin"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:text="@string/install_layout"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/app_install_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/horizontal_margin"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="@string/error_layout"
            android:textSize="16sp"/>
      </RelativeLayout>

      <RelativeLayout
          android:id="@+id/app_update"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:layout_below="@id/app_install">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/horizontal_margin"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:text="@string/update_layout"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/app_update_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/horizontal_margin"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="@string/error_layout"
            android:textSize="16sp"/>
      </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_below="@+id/information_layout"
        android:gravity="center"
        android:orientation="horizontal">

      <android.support.v7.widget.CardView
          xmlns:android="http://schemas.android.com/apk/res/android"
          android:id="@+id/remove_cache"
          android:layout_width="160dp"
          android:layout_height="40dp"
          android:layout_margin="4dp"
          android:foreground="?android:attr/selectableItemBackground">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:fontFamily="sans-serif-thin"
            android:text="@string/action_remove_cache"
            android:textSize="20sp"/>
      </android.support.v7.widget.CardView>

      <android.support.v7.widget.CardView
          xmlns:android="http://schemas.android.com/apk/res/android"
          android:id="@+id/clear_data"
          android:layout_width="160dp"
          android:layout_height="40dp"
          android:layout_margin="4dp"
          android:layout_toRightOf="@+id/remove_cache"
          android:foreground="?android:attr/selectableItemBackground">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:fontFamily="sans-serif-thin"
            android:text="@string/action_clear_data"
            android:textSize="20sp"/>
      </android.support.v7.widget.CardView>
    </RelativeLayout>
  </RelativeLayout>
</RelativeLayout>
